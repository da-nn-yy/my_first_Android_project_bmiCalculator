<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="BMI Calculator"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <!-- Weighttttttttttttt -->
    <TextView
        android:id="@+id/weightTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Weight"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="120dp" />

    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/weightTitleTextView"
        android:layout_marginTop="16dp"
        android:hint="in Kg"
        android:inputType="numberDecimal"
        android:padding="8dp" />

    <!-- hEIGHTTTTTTTTTTT -->
    <TextView
        android:id="@+id/HeightTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weightEditText"
        android:layout_centerHorizontal="true"
        android:text="Height"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp" />

    <!-- Calculate Button -->
    <EditText
        android:id="@+id/heightEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/HeightTitleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="in Meters"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heightEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Calculate BMI" />

    <!-- Result TextView -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="18sp" />
</RelativeLayout>
